pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "your-dockerhub-username/my-app:latest" // Change to your Docker Hub repo
        REGISTRY_CREDENTIALS = 'docker-hub-credentials' // Jenkins credentials ID for Docker registry
    }

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-jenkins-token',
                    url: 'https://github.com/Jatin-Jaiswal/DataTable.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Ensure you have a package.json and optional tests
                    sh 'npm install'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Uncomment below if you have tests in your project
                    // sh 'npm test'
                    echo 'No tests defined. Skipping.'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${REGISTRY_CREDENTIALS}") {
                        docker.image("${DOCKER_IMAGE}").push()
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            sh 'docker image prune -f'
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
