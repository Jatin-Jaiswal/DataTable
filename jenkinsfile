pipeline {
    agent any

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-jenkins-token',
                    url: 'https://github.com/Jatin-Jaiswal/DataTable.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("my-app:latest")
                }
            }
        }
    }
}
